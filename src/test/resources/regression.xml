<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- ═══════════════════════════════════════════════════════════════
     REGRESSION SUITE  -  All regression tests across 6 roles
     Command: mvn test -Dsuite=regression
     ═══════════════════════════════════════════════════════════════ -->
<suite name="Regression Tests - All Roles" parallel="tests" thread-count="6" verbose="1">

    <listeners>
        <listener class-name="listeners.ExtentReportListener"/>
    </listeners>

    <test name="Super Admin Regression">
        <groups><run><include name="regression"/></run></groups>
        <classes><class name="tests.superadmin.SuperAdminTest"/></classes>
    </test>

    <test name="Super User Regression">
        <groups><run><include name="regression"/></run></groups>
        <classes><class name="tests.superuser.SuperUserTest"/></classes>
    </test>

    <test name="Admin Prepaid Regression">
        <groups><run><include name="regression"/><include name="admin_prepaid"/></run></groups>
        <classes><class name="tests.admin.AdminTest"/></classes>
    </test>

    <test name="Admin Postpaid Regression">
        <groups><run><include name="regression"/><include name="admin_postpaid"/></run></groups>
        <classes><class name="tests.admin.AdminTest"/></classes>
    </test>

    <test name="Consumer Prepaid Regression">
        <groups><run><include name="regression"/><include name="consumer_prepaid"/></run></groups>
        <classes><class name="tests.consumer.ConsumerTest"/></classes>
    </test>

    <test name="Consumer Postpaid Regression">
        <groups><run><include name="regression"/><include name="consumer_postpaid"/></run></groups>
        <classes><class name="tests.consumer.ConsumerTest"/></classes>
    </test>

</suite>
