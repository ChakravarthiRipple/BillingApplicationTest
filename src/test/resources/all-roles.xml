<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- ═══════════════════════════════════════════════════════════════
     ALL ROLES SUITE  -  Runs all 6 roles in parallel
     Command: mvn test -Dsuite=all-roles
     ═══════════════════════════════════════════════════════════════ -->
<suite name="All Roles - Full Suite" parallel="tests" thread-count="6" verbose="1">

    <listeners>
        <listener class-name="listeners.ExtentReportListener"/>
    </listeners>

    <test name="Super Admin Tests">
        <groups><run><include name="super_admin"/></run></groups>
        <classes><class name="tests.superadmin.SuperAdminTest"/></classes>
    </test>

    <test name="Super User Tests">
        <groups><run><include name="super_user"/></run></groups>
        <classes><class name="tests.superuser.SuperUserTest"/></classes>
    </test>

    <test name="Admin Prepaid Tests">
        <groups><run><include name="admin_prepaid"/></run></groups>
        <classes><class name="tests.admin.AdminTest"/></classes>
    </test>

    <test name="Admin Postpaid Tests">
        <groups><run><include name="admin_postpaid"/></run></groups>
        <classes><class name="tests.admin.AdminTest"/></classes>
    </test>

    <test name="Consumer Prepaid Tests">
        <groups><run><include name="consumer_prepaid"/></run></groups>
        <classes><class name="tests.consumer.ConsumerTest"/></classes>
    </test>

    <test name="Consumer Postpaid Tests">
        <groups><run><include name="consumer_postpaid"/></run></groups>
        <classes><class name="tests.consumer.ConsumerTest"/></classes>
    </test>

</suite>
